<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="com.ksbm.ontu.alerts_module.adapter.NotesList_Adapter" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_splash">

        <LinearLayout
            android:layout_above="@+id/ivBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rel_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <TextView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="center_vertical"
                android:text="Add Notes"
                android:background="@drawable/rect_sky_blue_border"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textAllCaps="true"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal">

            </TextView>

<!--            <ImageView-->
<!--                android:id="@+id/iv_add"-->
<!--                android:layout_width="@dimen/_32sdp"-->
<!--                android:layout_height="@dimen/_32sdp"-->
<!--                android:layout_alignParentEnd="true"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_marginEnd="@dimen/_10sdp"-->
<!--                android:scaleType="fitXY"-->
<!--                android:src="@drawable/plus_icon"-->
<!--                app:tint="@color/black">-->

<!--            </ImageView>-->

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rel_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/rect_edit_bg"
                android:hint="Title"
                android:inputType="text"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:background="@drawable/rect_edit_bg"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:layout_gravity="top"
                android:gravity="top"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:id="@+id/tv_save"
                style="@style/textview14white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/redius_red_bg"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_16sdp"
                android:text="@string/save"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textStyle="bold">

            </TextView>

        </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_32sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_15sdp"
            android:scaleType="fitXY"
            android:src="@drawable/back_button">

        </ImageView>
    </RelativeLayout>
</layout>