<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rel_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:text=""
                    android:textAlignment="center"
                    android:gravity="center"
                    android:maxLines="3"
                    android:textAllCaps="true"
                    android:textColor="@color/slider_text_color"
                    android:textSize="@dimen/_32sdp"
                    style="@style/TextShadowStyle"
                    android:background="?android:attr/selectableItemBackground"
                    android:textStyle="bold">

                </TextView>


<!--                <TextView-->
<!--                    android:id="@+id/tv_workbook_name"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@+id/tv_title"-->
<!--                    android:layout_marginTop="@dimen/_10sdp"-->
<!--                    android:gravity="center"-->
<!--                    android:text="Workbook 1"-->
<!--                    android:textAlignment="center"-->
<!--                    android:textAllCaps="true"-->
<!--                    android:textColor="@color/goldenrod"-->
<!--                    android:textSize="@dimen/_16sdp"-->
<!--                    android:textStyle="bold" />-->

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <RelativeLayout
                    android:id="@+id/ll_pair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--                    <LinearLayout-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_gravity="center"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:orientation="horizontal">-->

                    <LinearLayout
                        android:id="@+id/ll_user"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_user_win"
                            style="@style/TextShadowStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            android:text="Winner!"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/slider_text_color"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                        <RelativeLayout
                            android:id="@+id/rel_user"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:background="@drawable/radius_fill_light">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_logged_user"
                                android:layout_width="@dimen/_90sdp"
                                android:layout_height="@dimen/_90sdp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/user_icon" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:gravity="center"
                            android:text="User"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/slider_text_color"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/tv_got_coins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="700"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/goldenrod"
                            android:textSize="@dimen/_24sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:gravity="center"
                            android:text=""
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/slider_text_color"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:gravity="center"
                        android:orientation="vertical">


<!--                        <RelativeLayout-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="match_parent"-->
<!--                            android:layout_marginBottom="@dimen/_15sdp">-->

                            <TextView
                                android:id="@+id/tv_ontu_win"
                                style="@style/TextShadowStyle"
                                android:layout_above="@+id/iv_ontu_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="?android:attr/selectableItemBackground"
                                android:gravity="center"
                                android:layout_centerHorizontal="true"
                                android:text="Winner!"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="@color/slider_text_color"
                                android:textSize="@dimen/_18sdp"
                                android:textStyle="bold"
                                android:visibility="invisible" />

                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/iv_ontu_user"
                                android:layout_width="@dimen/_110sdp"
                                android:layout_height="@dimen/_110sdp"
                                android:src="@drawable/mentor_withoutstar">

                            </ImageView>

                        <TextView
                            android:id="@+id/tv_ontu_name"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_ontu_user"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:gravity="center"
                            android:text="@string/app_name_Character"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/slider_text_color"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="normal" />

                            <TextView
                                android:layout_below="@+id/tv_ontu_name"
                                android:id="@+id/tv_got_coins_ontu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:gravity="center"
                                android:layout_centerHorizontal="true"
                                android:text="300"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textColor="@color/goldenrod"
                                android:textSize="@dimen/_24sdp"
                                android:layout_marginBottom="@dimen/_40sdp"
                                android:textStyle="bold" />

<!--                        </RelativeLayout>-->


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_vs"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:src="@drawable/vs" />

                    <ImageView
                        android:id="@+id/iv_coin"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_below="@+id/iv_vs"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:src="@drawable/coins">

                    </ImageView>

                    <LinearLayout
                        android:id="@+id/scoreboard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_coin"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_40sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/workbook_scoreboard"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="1.0">

                            </ImageView>

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="80dp"
                                android:layout_marginBottom="16dp"
                                android:text="700"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="normal"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView1"
                                app:layout_constraintStart_toStartOf="@+id/imageView1" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="255dp"
                                android:layout_marginEnd="69dp"
                                android:layout_marginBottom="16dp"
                                android:text="1000"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="normal"
                                app:layout_constraintBottom_toBottomOf="@+id/imageView1"
                                app:layout_constraintEnd_toEndOf="@+id/imageView1"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toEndOf="@+id/textView5"
                                app:layout_constraintStart_toStartOf="@+id/imageView1" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <LinearLayout
                            android:id="@+id/ll_retake"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:background="@drawable/toddle_background"
                            android:elevation="@dimen/_12sdp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/_5sdp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_status"
                                    style="@style/text16_bold_light_black"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Ok"
                                    android:textAllCaps="true"
                                    android:textColor="@color/toodle_text_color" />


                            </LinearLayout>

                        </LinearLayout>

<!--                        <TextView-->
<!--                            android:id="@+id/tv_see_video_again"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:layout_marginTop="@dimen/_5sdp"-->
<!--                            android:gravity="center"-->
<!--                            android:text="Watch Video"-->
<!--                            android:textAlignment="center"-->
<!--                            android:textAllCaps="true"-->
<!--                            android:textColor="@color/blue"-->
<!--                            android:textSize="@dimen/_16sdp"-->
<!--                            android:textStyle="bold" />-->
                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:src="@drawable/back_button">

        </ImageView>

    </RelativeLayout>

</layout>