            <!--                    android:layout_height="match_parent"-->
            <!--                    android:layout_alignParentEnd="true"-->
            <!--                    />-->


            <!--            </RelativeLayout>-->


            <com.ksbm.ontu.foundation.ArrowLayout
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/arrow_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >

                <TextView
                    android:id="@+id/text_row1"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_fill"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="dddd"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_row2"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_fill"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="rrrr"
                    android:layout_below="@+id/text_row1"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_row3"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_fill"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/text_row2"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_row4"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_fill"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/text_row3"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_row5"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_fill"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_below="@+id/text_row4"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_row_right1"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_blue_bg2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_row_right2"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_blue_bg2"
                    android:gravity="center"
