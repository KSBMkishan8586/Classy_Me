                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_row_right3"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_blue_bg2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/text_row_right2"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_row_right4"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_blue_bg2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/text_row_right3"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_row_right5"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rect_blue_bg2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/text_row_right4"
                    android:textStyle="normal" />

            </com.ksbm.ontu.foundation.ArrowLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_previous"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_20sdp"
                android:background="@drawable/next_btn_bg"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Previous"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal">

            </TextView>

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@drawable/next_btn_bg"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="Next"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="normal">

            </TextView>

        </LinearLayout>


    </RelativeLayout>

</layout>