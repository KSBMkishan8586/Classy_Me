<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:id="@+id/frame_frag"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/home_bg"
            android:scrollbars="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rel_tool"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <com.skydoves.elasticviews.ElasticImageView
                            android:id="@+id/iv_setting_menu"
                            android:layout_width="@dimen/_36sdp"
                            android:layout_height="@dimen/_36sdp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/menu_icon"
                            app:imageView_duration="300"
                            app:imageView_scale="0.7">

                        </com.skydoves.elasticviews.ElasticImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="@dimen/_20sdp"
                            android:layout_toLeftOf="@id/ivCoin"
                            android:layout_toRightOf="@+id/iv_setting_menu"
                            android:background="@drawable/rectangle_bg_light_blue"
                            android:gravity="center"
                            android:text="@string/bookmarks_and_notes"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />


                        <com.skydoves.elasticviews.ElasticImageView
                            android:id="@+id/ivCoin"
                            android:layout_width="@dimen/_36sdp"
                            android:layout_height="@dimen/_36sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/start_video"
                            app:imageView_duration="300"
                            app:imageView_scale="0.7">

                        </com.skydoves.elasticviews.ElasticImageView>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="296dp"
                        android:layout_height="493dp"
                        android:layout_below="@+id/rel_tool"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_18sdp"
                        android:layout_marginTop="21dp"
                        android:layout_marginEnd="@dimen/_18sdp"
                        android:layout_marginBottom="@dimen/_18sdp"
                        android:gravity="center"
                        android:orientation="vertical">


                        <!--                        here design will put-->

                        <ImageView
                            android:id="@+id/bookmark"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="35dp"
                            android:layout_marginTop="-7dp"
                            android:layout_marginEnd="55dp"
                            android:src="@drawable/start_video" />

                        <TextView
                            android:id="@+id/button_bookmark"
                            android:layout_width="273dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bookmark"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginEnd="32dp"
                            android:background="@drawable/rectangle_bg_light_blue"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Double Click For Bookmarking a screen !"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/notes"
                            android:layout_width="250dp"
                            android:layout_height="45dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="43dp"
                            android:layout_marginTop="48dp"
                            android:layout_marginEnd="50dp"
                            android:layout_marginBottom="79dp"
                            android:background="@drawable/rectangle_bg_light_blue"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Create a Note !"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="145dp"
                            android:layout_height="133dp"
                            android:layout_below="@+id/button_bookmark"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="85dp"
                            android:layout_marginTop="17dp"
                            android:layout_marginEnd="105dp"
                            android:src="@drawable/notelogo" />


                    </RelativeLayout>



                </RelativeLayout>


                </RelativeLayout>




        </ScrollView>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_425sdp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/back_button" />

    </FrameLayout>

</layout>
