<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_bg"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/noun"
                android:textAlignment="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/slider_text_color"
                android:textSize="@dimen/_24sdp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/tv_workbook_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_below="@+id/tv_title"
                android:text="Workbook 1"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/dark_goldenrod"
                android:textSize="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold">
            </TextView>

            <LinearLayout
                android:id="@+id/ll_pair"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                  >

                    <RelativeLayout
                        android:layout_margin="@dimen/_10sdp"
                        android:id="@+id/rel_login_user"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/user_pic_border">

                        <androidx.cardview.widget.CardView
                            android:layout_width="@dimen/_65sdp"
                            android:layout_height="@dimen/_65sdp"
                            android:layout_centerInParent="true"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/iv_logged_user"
                                android:scaleType="fitXY"
                                android:src="@drawable/man" />

                        </androidx.cardview.widget.CardView>

                    </RelativeLayout>

<!--                    <ImageView-->
<!--                        android:id="@+id/iv_logged_user"-->
<!--                        android:layout_width="@dimen/_100sdp"-->
<!--                        android:layout_height="@dimen/_100sdp"-->
<!--                        android:layout_margin="@dimen/_10sdp"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:scaleType="fitXY"-->
<!--                        android:src="@drawable/ankit">-->

<!--                    </ImageView>-->


                    <ImageView
                        android:id="@+id/iv_vs"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/vs">

                    </ImageView>



<!--                    <RelativeLayout-->
<!--                        android:layout_margin="@dimen/_10sdp"-->
<!--                        android:layout_width="@dimen/_100sdp"-->
<!--                        android:layout_height="@dimen/_100sdp"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:layout_alignParentEnd="true"-->
<!--                        android:background="@drawable/user_pic_border">-->

<!--                        <ImageView-->
<!--                            android:id="@+id/iv_ontu_user"-->
<!--                            android:layout_width="@dimen/_90sdp"-->
<!--                            android:layout_height="@dimen/_90sdp"-->
<!--                            android:layout_margin="@dimen/_5sdp"-->

<!--                            android:src="@drawable/mentor_withoutstar" />-->
<!--                    </RelativeLayout>-->


                    <ImageView
                        android:id="@+id/iv_ontu_user"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_10sdp"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/mentor_withoutstar">

                    </ImageView>

                    <LinearLayout
                        android:layout_below="@+id/iv_vs"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/coins">

                    </ImageView>

                    <TextView
                        android:id="@+id/tv_reward_coins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="1000 Coins"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_goldenrod"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold">
                    </TextView>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_20sdp"
                android:layout_below="@+id/ll_pair"
                android:src="@drawable/back_button">

            </ImageView>

        </RelativeLayout>


    </LinearLayout>
</layout>