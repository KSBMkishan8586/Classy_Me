                        <TextView
                            android:id="@+id/tv_100"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/rect_sky_blue_bg"
                            android:gravity="center"
                            android:text="5000"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_32sdp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_toEndOf="@+id/tv_100"
                            android:gravity="center"
                            android:paddingStart="@dimen/_5sdp"
                            android:text="Five"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/red"
                            android:textSize="@dimen/_32sdp"
                            android:textStyle="bold"></TextView>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/hun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:paddingStart="@dimen/_5sdp"
                        android:text="Thousand"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_32sdp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp">

                            <ImageView
                                android:id="@+id/iv_girl"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:src="@drawable/two_thousand">

                            </ImageView>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_marginTop="@dimen/_50sdp"
                                android:src="@drawable/two_thousand">

                            </ImageView>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10sdp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:src="@drawable/five_hundred">

                            </ImageView>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_marginTop="@dimen/_50sdp"
                                android:src="@drawable/five_hundred">

                            </ImageView>

                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>
                <include
                    android:layout_marginTop="@dimen/_310sdp"
                    android:id="@+id/ll_button"
                    layout="@layout/record_listen_button_layout"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                </include>

                <LinearLayout
                    android:layout_below="@+id/ll_button"
                    android:id="@+id/ll_get_coin"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/iv_userside_coin_img"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="center"
                        android:rotation="70"
                        android:scaleType="fitXY"
                        android:visibility="visible"
                        app:srcCompat="@drawable/move_coins_right" />

                    <TextView
                        android:id="@+id/tv_user_coin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_5sdp"
                        android:text="+ 100"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:textSize="@dimen/_24sdp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>
