<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_15sdp"
                android:textColor="@color/black"
               android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/m_corner"
                android:text="Q1. Noun"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textSize="@dimen/_16sdp"
                android:textStyle="normal">
            </TextView>


        </LinearLayout>


        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/_5sdp"
            android:visibility="gone"
            android:layout_height="@dimen/_150sdp"
            />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_i_quiz"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="right"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:src="@drawable/i_button"/>


        <RadioGroup
            android:id="@+id/radio_group_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical">



            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:textSize="@dimen/_16sdp"
                android:background="@drawable/memory_back"
                android:textColor="@color/white"
                android:button="@null"
                android:text="Mango">

            </RadioButton>

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/white"
                android:background="@drawable/memory_back"

                android:button="@null"
                android:text="Mango"></RadioButton>

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/white"
                android:background="@drawable/memory_back"

                android:button="@null"
                android:text="Mango"></RadioButton>

            <RadioButton
                android:id="@+id/radio4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:textSize="@dimen/_16sdp"
                android:background="@drawable/memory_back"
                android:textColor="@color/white"
                android:button="@null"
                android:text="Mango"></RadioButton>

            <RadioButton
                android:visibility="gone"
                android:id="@+id/radio5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:gravity="center"
                android:textSize="@dimen/_16sdp"
                android:background="@drawable/memory_back"
                android:textColor="@color/white"
                android:button="@null"
                android:text="Mango"></RadioButton>

        </RadioGroup>




    </LinearLayout>


</ScrollView>